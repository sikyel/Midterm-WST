function showTutorial(Topic) {
    const tutorialDisplay = document.getElementById('Topic');
    let Topic;

    // Define hobbies for each member
    switch (Topic) {
        case 'Background':
            window.location.href = "Backgrounds/BackgroundTutorial.html"; // Change to your destination file
            break;
        case 'Colors':
            window.location.href = "Colors/ColorsTutorial.html"; // Change to your destination file
            break;
        case 'Text':
            window.location.href = 'Text/TextTutorial.html';
            break;
        case 'Transition':
            window.location.href = 'Transitions/TranstionTutorial.html';
            break;
        default:
            Topics = '';
    }

    // Update the hobbies display
    tutorialDisplay.textContent = Topics;
    tutorialDisplay.style.display = 'block'; // Show the hobbies
}